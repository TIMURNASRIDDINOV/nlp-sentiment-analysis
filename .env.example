# ─── NLP Sentiment — environment configuration ───
# Copy this file to `.env` and edit as needed.
# Values here override the built-in defaults.

# Hugging Face model id
NLP_MODEL=distilbert-base-uncased-finetuned-sst-2-english

# Device: -1 = CPU, 0 = first GPU, 1 = second GPU …
NLP_DEVICE=-1

# Default top-k labels returned per text
NLP_TOP_K=1

# Web server bind address and port
NLP_HOST=127.0.0.1
NLP_PORT=5000

# Comma-separated CORS allowed origins ("*" = allow all)
NLP_CORS_ORIGINS=*

# Safety limits
NLP_MAX_BATCH_SIZE=64
NLP_MAX_TEXT_LENGTH=5000
NLP_REQUEST_TIMEOUT=30

# Logging level (DEBUG, INFO, WARNING, ERROR)
NLP_LOG_LEVEL=INFO

# Enable debug mode (true / false)
NLP_DEBUG=false
